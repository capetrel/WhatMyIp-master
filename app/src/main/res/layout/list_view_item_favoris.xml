<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_fav_name_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name of ip"/>

    <TextView
        android:id="@+id/text_view_fav_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ip fav"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_fav_city_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="city fav, "/>

        <TextView
            android:id="@+id/text_view_fav_country_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="country fav"/>
    </LinearLayout>

</LinearLayout>